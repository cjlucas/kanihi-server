<body>
  <html>
    <script> getServerInfo(); </script>
      <div class='navbar'>
        <div class='navbar-inner'>
          <a class='brand' href='#'>Music Server</a>
        </div>
      </div>
    <div class='container-fluid'>
      <div class='row-fluid'>
        <div class='span8' id='main'>
          <div class='alert' id='flash'></div>
          <h2>Sources</h2>
          <table id='sources'>
            <tr>
              <th>Name</th>
              <th class="nowrap" colspan=4>Last Updated</th>
            </tr>
            <!-- filled by updateSources -->
          </table>

          <h2>Jobs</h2>
          <table id='jobs'>
            <tr>
              <th class="nowrap">ID</th>
              <th class="stretch">Name</th>
              <th class="nowrap">Priority</th>
            </tr>
            <!-- filled by updateJobs -->
          </table>

          <% AppConfig.reload %>
          <% if AppConfig[:debug] %>
            <h2>Daemons</h2>
            <table id='daemons'>
              <tr>
                <th>Name</th>
                <th colspan=2>PID</th>
              </tr>
              <!-- filled by updateDaemons -->
            </table>
          <% end %>
        </div>

        <div class='span4' id='sidebar'>
          <!-- data filled by updateServerStats -->
        </div>

      </div>
    </div>
  </html>
</body>
